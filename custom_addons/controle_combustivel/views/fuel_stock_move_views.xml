<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_fuel_stock_move_tree" model="ir.ui.view">
        <field name="name">fuel.stock.move.tree</field>
        <field name="model">fuel.stock.move</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="tank_id"/>
                <field name="move_type"/>
                <field name="integration_source"/>
                <field name="source_document"/>
                <field name="source_partner"/>
                <field name="liters"/>
                <field name="unit_price"/>
                <field name="total"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="view_fuel_stock_move_form" model="ir.ui.view">
        <field name="name">fuel.stock.move.form</field>
        <field name="model">fuel.stock.move</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tank_id"/>
                        <field name="date"/>
                        <field name="move_type"/>
                    </group>
                    <group>
                        <field name="integration_source"/>
                        <field name="source_document"/>
                        <field name="source_partner"/>
                    </group>
                    <group>
                        <field name="liters"/>
                        <field name="unit_price"/>
                        <field name="total" readonly="1"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fuel_stock_move" model="ir.actions.act_window">
        <field name="name">Entradas/Ajustes do Tanque</field>
        <field name="res_model">fuel.stock.move</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
