<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_fuel_tank_tree" model="ir.ui.view">
        <field name="name">fuel.tank.tree</field>
        <field name="model">fuel.tank</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="capacity_liters"/>
                <field name="current_liters"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_fuel_tank_form" model="ir.ui.view">
        <field name="name">fuel.tank.form</field>
        <field name="model">fuel.tank</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="capacity_liters"/>
                        <field name="current_liters" readonly="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fuel_tank" model="ir.actions.act_window">
        <field name="name">Tanque</field>
        <field name="res_model">fuel.tank</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
