<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="module_category_fuel" model="ir.module.category">
        <field name="name">Combustível</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_fuel_driver" model="res.groups">
        <field name="name">Motorista</field>
        <field name="category_id" ref="module_category_fuel"/>
    </record>

    <record id="group_fuel_analyst" model="res.groups">
        <field name="name">Analista</field>
        <field name="category_id" ref="module_category_fuel"/>
        <field name="implied_ids" eval="[(4, ref('controle_combustivel.group_fuel_driver'))]"/>
    </record>

    <record id="group_fuel_admin" model="res.groups">
        <field name="name">Administrador Combustível</field>
        <field name="category_id" ref="module_category_fuel"/>
        <field name="implied_ids" eval="[(4, ref('controle_combustivel.group_fuel_analyst'))]"/>
    </record>

</odoo>
